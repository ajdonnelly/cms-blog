<div class="post">
  <div class="control">
    <h2>Edit Post</h2>
  </div>
  <form id="update-post-form" class="content">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" />

    <label class="form" for="content">Content</label>
    <textarea name="content" class="form-input">{{post.body}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/javascript/edit.js"></script>